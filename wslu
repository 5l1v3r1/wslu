#!/usr/bin/env bash

# wslu - Windows 10 linux Subsystem Utility Core
# <https://github.com/patrick330602/wslu>

# Copyright(c) 2017 Patrick Wu J M <wotingwu@live.com>

# For more help for wslu, visit the following site:
# http://garage.patrickwu.cf/man/wslu

# data segment
wslu_version=1.0

## color
black='\e[0m\e[30m'
red='\e[0m\e[31m'
green='\e[0m\e[32m'
brown='\e[0m\e[33m'
blue='\e[0m\e[34m'
purple='\e[0m\e[35m'
cyan='\e[0m\e[36m'
yellow='\e[0m\e[1;33m'
white='\e[0m\e[1;37m'
dark_gray='\e[0m\e[1;30m'
light_red='\e[0m\e[1;31m'
light_green='\e[0m\e[1;32m'
light_blue='\e[0m\e[1;34m'
light_purple='\e[0m\e[1;35m'
light_cyan='\e[0m\e[1;36m'
light_gray='\e[0m\e[37m'
orange='\e[38;5;202m'
light_orange='\e[38;5;214m'
bold=`tput bold`
reset=`tput sgr0`

## indicator
info="${green}[info]${reset}"
error="${red}[error]${reset}"
warn="${orange}[warn]${reset}"
debug="${cyan}[debug]${reset}"

## constants
help_short="wslu (-h|-v|-s)"

## basic distro detection
distro="$(lsb_release -ds | sed -e 's/"//g')"
if [[ "$distro" == Ubuntu* ]]; then
	distro="ubuntu"
elif [[ "$distro" == openSUSE* ]]; then
	distro="opensuse"
elif [[ "$distro" == SUSE* ]]; then
	distro="sles"
fi

function help()
{
	echo -e "`basename "$1"` - Component of Windows 10 Linux Subsystem Utility
Usage: $2

For more help for `basename "$1"`, visit the following site:
http://garage.patrickwu.cf/man/wslu/`basename "$1"`"
}

# commands
## general
case $1 in
	-v|--version) echo "wslu v$wslu_version";;
	-h|--help) help $0 "$help_short";;
	-s|--silent);;
	*)echo "$help_short"; exit 20;;
esac
